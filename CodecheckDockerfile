FROM python:3.11-slim

# Install system dependencies required for geospatial + jericho
RUN apt-get update && apt-get install -y \
    build-essential \
    make \
    gcc \
    g++ \
    libncurses-dev \
    libffi-dev \
    libssl-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN python -m pip install --upgrade pip

# Install pip dependencies
RUN pip install geopandas shapely networkx momepy==0.6.0 osmnx==1.6.0 textworld freetype-py pandas openpyxl

WORKDIR /codecheck
COPY . /codecheck

ENTRYPOINT ["/bin/bash"]